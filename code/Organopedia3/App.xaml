<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Organopedia3"
             xmlns:resx="clr-namespace:Organopedia3.Resources"
             xmlns:services="clr-namespace:Organopedia3.Services"
             x:Class="Organopedia3.App">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/ColorsLight.xaml" />
                <ResourceDictionary Source="Resources/Styles/ColorsDark.xaml" />
                <ResourceDictionary Source="Resources/Styles/ColorsHighContrast.xaml" />
                <ResourceDictionary Source="Resources/Styles/MainStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <x:Double x:Key="TextFontSize">16</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
